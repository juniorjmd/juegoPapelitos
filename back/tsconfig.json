{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true, 
    "isolatedModules": true,
    "skipLibCheck": true, 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}